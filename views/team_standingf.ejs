<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lib Livescore Form</title>
  <link rel="stylesheet" href="/css/form.css">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-pG0o5zGk4L3Gd0YVfS10jE4YVfP1E+Gzj9zX+gT+lJmLvBgcWjRkFeqjI2Ax6wZs+Lqj3m4v9eNHN1XyP4rXmg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <h1>League Standing Data Form</h1>

  <form id="team-form" method="POST" action="/league_standing" enctype="multipart/form-data"> 
    <div class="team-info">
      <div class="team-info">
        <!-- League ID -->
        <label for="league_id">League ID:</label>
        <select name="league_id" id="league_id" class="form-control" required>
            <option value="">Select League</option>
            <% leagueInfo.forEach(function(league){ %>
                <option value="<%= league.league_id %>"><%= league.league_name %></option>
            <% }); %>
        </select>
        
        <!-- Team Name -->
        <label for="team_name">Team Name:</label>
        <select name="team_name" id="team_name" class="form-control" required>
            <option value="">Select Team Name</option>
            <% teams.forEach(function(team){ %>
              <option value="<%= team.team_name %>"><%= team.team_name %></option>
          <% }); %>
        </select>

        <!-- Team ID -->
        <label for="team_id">Team ID:</label>
        <select name="team_id" id="team_id" class="form-control" required>
            <option value="">Select Team ID</option>
             <% teams.forEach(function(team){ %>
                <option value="<%= team.team_id %>"><%= team.team_id %></option>
            <% }); %>
        </select>
      
      <!-- Team Logo (Custom Dropdown) -->
      <label for="logo_url">Select Team Logo</label>
      <input type="file" name="logo_url" id="logo_url"><br>
  
      <!-- League Standing Inputs -->
      <label for="played">Played (P):</label>
      <input type="number" id="played" name="played" required><br>
  
      <label for="won">Won (W):</label>
      <input type="number" id="won" name="won" required><br>
  
      <label for="drawn">Drawn (D):</label>
      <input type="number" id="drawn" name="drawn" required><br>
  
      <label for="lost">Lost (L):</label>
      <input type="number" id="lost" name="lost" required><br>
  
      <label for="goals_for">Goals For (F):</label>
      <input type="number" id="goals_for" name="goals_for" required><br>
  
      <label for="goals_against">Goals Against (A):</label>
      <input type="number" id="goals_against" name="goals_against" required><br>
  
      <label for="goal_difference">Goal Difference (GD):</label>
      <input type="number" id="goal_difference" name="goal_difference" required><br>
  
      <label for="points">Points (PTS):</label>
      <input type="number" id="points" name="points" required><br>
  
      <button type="submit">Add Team</button>
    </div>  
  </form>
  
  <!-- Internal JavaScript -->
  <script src="/js/main.js"></script>
</body>
</html>
