<%- include ("partials/header", { title: title }) %>
    <div class="">
      <div class="selection_link">
        <a href="#"><button type="button" class="selection_btn">FootBall</button></a>
        <a href="#"><button type="button" class="selection_btn">Basketball</button></a>
        <a href="#"><button type="button" class="selection_btn">KickBall</button></a>
      </div>
      <section class="dashcontainer">
        <%- include('partials/sidebar', { teamdata: teamdata, leaguedata: leaguedata, countydata: countydata }) %>
          <main class="main_display">
            <nav class="border-bottom">
                <div class="">
                  <div class="qualification_group">
                    <div class="qualification_link">
                      <a href="" class="qualification">
                        <img class=" qualification_img" src="<%= teamdata.team_logo %>" alt="">
                        <div>
                          <h2><%= teamdata.team_name %></h2>
                          <p>Liberia</p>
                        </div>
                      </a>
                    </div>
                    <div class="qualification_link">
                     <button type="button" onclick="selsect_favorite">
                      <i class="fa-regular fa-star fs-2 text_color"></i>
                     </button>
                    </div>
                  </div>
                </div>
                <div class="qualification-action-btn">
                  <a href="/team"><button type="button" class="qualification-btn">Overview</button></a>
                  <a href="/team_matches"><button type="button" class="qualification-btn">Matches</button></a>
                  <a href="/team_table"><button type="button" class="qualification-btn">Table</button></a>
                  <a href="/player_stats_all/:team_id"><button type="button" class="qualification-btn">Play-Stats</button></a>
                </div>
                <div class="qualification-action-btn">
                  <a href="/player_stats_all/:team_id"><button type="button" class="qualification-btn">All</button></a>
                  <a href="/player_stats_goal"><button type="button" class="qualification-btn">Goals</button></a>
                  <a href="/player_stats_ass"><button type="button" class="qualification-btn">Assists</button></a>
                </div>
            </nav>
            <section class="main_content-sec">
            <div class="nav flex-column gap-2 table_link">
                <h5>Goals</h5>
            </div>
            <table class="table_leageu1">
              <tbody>
              <% playerdata.forEach((player, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                    <td class="d-flex align-items-center justify-content-between gap-1">
                      <img class="main_content_imgs" src="data:image/png;base64,<%= player.team_logo.toString('base64') %>" alt="<%= player.player_name %>">
                      <p><b><%= player.player_name %></b></p>
                      <td><%= player.position %></td>
                  </td>
                  <td><%= player.goals %></td>
               </tr>
             <% }) %>
             <tr>
              <td rowspan="4" colspan="10" class="full_table_link">
                <a href="/player_stats_goal">See Full table</a>
              </td>
             </tr>                 
              </tbody>
            </table>
            <div class="nav flex-column gap-2 table_link">
              <h5>Assists</h5>
            </div>
            <table class="table_leageu1">
            <tbody>
              <% playerdata.forEach((player, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                    <td class="d-flex align-items-center justify-content-between gap-1">
                      <img class="main_content_imgs" src="data:image/png;base64,<%= player.team_logo.toString('base64') %>" alt="<%= player.player_name %>">
                      <p><b><%= player.player_name %></b></p>
                      <td><%= player.position %></td>
                  </td>
                  <td><%= player.assists %></td>
             </tr>
             <% }) %> 
           <tr>
            <td rowspan="4" colspan="10" class="full_table_link">
              <a href="/player_stats_ass">See Full table</a>
            </td>
           </tr>        
            </tbody>
            </table>
            
            </section>
          </main>
      </section>
    </div>
  </div>
  <%- include ("partials/footer.ejs") %>