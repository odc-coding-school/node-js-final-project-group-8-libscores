<%- include ("partials/header.ejs") %>
    <div class="">
      <div class="selection_link">
        <a href="#"><button type="button" class="selection_btn">FootBall</button></a>
        <a href="#"><button type="button" class="selection_btn">Basketball</button></a>
        <a href="#"><button type="button" class="selection_btn">KickBall</button></a>
      </div>
      <section class="dashcontainer">
        <%- include('partials/sidebar', { teamdata: teamdata, leaguedata: leaguedata, countydata: countydata }) %>
          <main class="main_display">

      <nav class="qualification_main_nav">
        <div class="qualificationmain_nav_lc">
          <div class="qualification_link">
            <a href="#" class="qualification">
              <img class="qualification_img" src="<%= league.logo %>" alt="">
              <div class="qualification_heading">
                <h5 class="text-light"><%= league.league_name %></h5>
                <p><%= league.country %></p>
              </div>
            </a>
          </div>
          <div class="qualification-action-btn">
            <a href="/team/<%= league.league_id %>"><button type="button" class="qualification-btn">Overview</button></a>
            <a href="/team_matches/<%= league.league_id %>"><button type="button" class="qualification-btn">Matches</button></a>
            <a href="/team_table/<%= league.league_id %>"><button type="button" class="qualification-btn">Table</button></a>
            <a href="/player_stats_all/<%= league.league_id %>"><button type="button" class="qualification-btn">Play-Stats</button></a>
          </div>
        </div>
      </nav>

      <div class="select_matches_btn">
        <a href="#"><button type="button" class="select_btn">FIXTURE</button></a>
        <a href="#"><button type="button" class="select_btn">RESULTS</button></a>
      </div>

      <section class="main_content-sec">
        <h5>All Fixtures</h5>

        <% matchdata.forEach(match => { %>
        <fieldset class="main_content">
          <a href="#" class="main_content_link d-flex justify-content-between align-items-center text-decoration-none">
            <div class="d-flex align-items-center gap-4 ms-2">
              <div class="d-flex align-items-center">
                <p><%= match.home_team_name %> vs <%= match.away_team_name %></p>
              </div>
              <div class="main_content_teams">
                <div class="d-flex gap-2">
                  <img class="main_content_imgs" src="<%= match.home_team_logo %>" alt="Home team logo">
                  <p><%= match.home_team_name %></p>
                </div>
                <div class="d-flex gap-2">
                  <img class="main_content_imgs" src="<%= match.away_team_logo %>" alt="Away team logo">
                  <p><%= match.away_team_name %></p>
                </div>
              </div>
            </div>
            <div class="contant me-2">
              <p>Score: <%= match.home_team_score %> - <%= match.away_team_score %></p>
              <i class="fa-regular fa-star fs-2"></i>
            </div>
          </a>
        </fieldset>
        <% }) %>

        <% leaguedata.forEach(league => { %>
        <div class="qualification_link">
          <a href="#" class="qualification">
            <img class="qualification_img" src="<%= league.logo %>" alt="">
            <div class="qualification_heading">
              <h5 class="text-light"><%= league.league_name %>: <%= league.group %></h5>
              <p><%= league.country %></p>
            </div>
          </a>
        </div>
        <% }) %>
      </section>
    </main>
  </section>
</div>

<%- include ("partials/footer.ejs") %>
