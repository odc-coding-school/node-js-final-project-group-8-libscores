                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Teams Toping Their Table</h5>

                  <table class="table table-borderless datatable mt-4">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Teams</th>
                        <th scope="col">Leagues</th>
                        <th scope="col">Played</th>
                        <th scope="col">Points</th>
                      </tr>
                    </thead>
                   
                    <tbody>
                      <% 
                        let leagueCount = {};  // Keep track of teams per league
                        let displayedRows = 0; // Count total displayed rows
                    
                        // Sort data by points in descending order
                        data.sort((a, b) => b.points - a.points);
                    
                        data.forEach(function(row, index) { 
                          // Only display 8 rows max
                          if (displayedRows < 8) {
                            // Initialize league count if not already present
                            if (!leagueCount[row.league_name]) {
                              leagueCount[row.league_name] = 0;
                            }
                    
                            // Display max 2 teams per league
                            if (leagueCount[row.league_name] < 2) {
                              leagueCount[row.league_name]++;
                    
                              // Increment displayed rows
                              displayedRows++;
                      %>
                              <tr>
                                <th scope="row"><a href="#">#<%= displayedRows %></a></th>
                                <td><%= row.team_name %></td>
                                <td><a href="#" class="text-primary"><%= row.league_name %></a></td>
                                <td><%= row.played %></td>
                                <td><span class="badge bg-success"><%= row.points %></span></td>
                              </tr>
                      <% 
                            } 
                          } 
                        });
                      %>
                    </tbody>
                  </table>
                </div>

